{% extends 'base.html.twig' %}

{% block title %}Concentration index{% endblock %}

{% block body %}
    <h1>Concentration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concentration in concentrations %}
            <tr>
                <td>{{ concentration.id }}</td>
                <td>{{ concentration.nom }}</td>
                <td>
                    <a href="{{ path('app_concentration_show', {'id': concentration.id}) }}">show</a>
                    <a href="{{ path('app_concentration_edit', {'id': concentration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_concentration_new') }}">Create new</a>
{% endblock %}
