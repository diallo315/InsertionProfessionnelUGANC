{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>NomEntreprise</th>
                <td>{{ offre.nomEntreprise }}</td>
            </tr>
            <tr>
                <th>NomOffre</th>
                <td>{{ offre.nomOffre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.Description }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ offre.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ offre.telephone }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateLimite</th>
                <td>{{ offre.dateLimite ? offre.dateLimite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ offre.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

